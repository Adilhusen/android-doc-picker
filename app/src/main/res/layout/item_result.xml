<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/md_white_1000"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/sc_black_alpha_25"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/item_result_doc_ext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/offset_6"
            android:layout_margin="@dimen/offset_16"
            tools:text="pdf"
            android:textSize="@dimen/font_12"
            android:textColor="@color/md_white_1000"
            android:gravity="center"
            android:background="@drawable/dr_rect_round_red_doc_background"
            app:srcCompat="@drawable/ic_iconfinder_folder39_216484"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/item_result_doc_name"
                style="@style/TextTitle"
                android:textColor="@color/md_grey_900"
                tools:hint="Doc Name" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/md_grey_300"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/item_result_doc_size"
                style="@style/TextNormal"
                android:textSize="@dimen/font_14"
                android:textColor="@color/md_grey_400"
                tools:hint="Size" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>